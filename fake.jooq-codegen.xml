<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.14.0.xsd">
    <jdbc>
        <driver>com.mysql.cj.jdbc.Driver</driver>
        <url>jdbc:mysql://localhost:3306/jam</url>
        <user></user>
        <password></password>
    </jdbc>

    <generator>
        <name>org.jooq.codegen.JavaGenerator</name>

        <database>
            <name>org.jooq.meta.mysql.MySQLDatabase</name>
            <inputSchema>jam</inputSchema>
            <includes>.*</includes>
            <excludes></excludes>

            <forcedTypes>
                <forcedType>
                    <userType>java.util.UUID</userType>
                    <converter>com.ucla.jam.util.jooq.UUIDConverter</converter>
                    <includeExpression>
                        .*\.users\.id|
                        .*\.internal_credentials\.userId|
                        .*\.friends\.userA|
                        .*\.friends\.userB|
                        .*\.friend_requests\.source|
                        .*\.friend_requests\.target|
                        .*\.chatroom_invites\.room|
                        .*\.chatroom_invites\.source|
                        .*\.chatroom_invites\.target|
                        .*\.chatrooms\.id|
                        .*\.chatroom_members\.room|
                        .*\.chatroom_members\.user|
                        .*\.chats\.room|
                        .*\.chats\.user|
                        .*\.visited_recs\.userId|
                        .*\.visited_recs\.targetId|
                        .*\.notifications\.userId|
                        .*\.notifications\.id
                    </includeExpression>
                    <includeTypes>CHAR\(36\)</includeTypes>
                </forcedType>
                <forcedType>
                    <userType>java.time.Instant</userType>
                    <converter>com.ucla.jam.util.jooq.InstantConverter</converter>
                    <includeExpression>
                        .*\.chatrooms\.updated|
                        .*\.chats\.at|
                        .*\.notifications\.at
                    </includeExpression>
                    <includeTypes>BIGINT</includeTypes>
                </forcedType>
                <forcedType>
                    <userType>com.ucla.jam.user.User.Profile</userType>
                    <converter>com.ucla.jam.user.User.Profile.Converter</converter>
                    <includeExpression>.*\.users\.profile</includeExpression>
                    <includeTypes>TEXT</includeTypes>
                </forcedType>
                <forcedType>
                    <userType>com.ucla.jam.user.User.Preferences</userType>
                    <converter>com.ucla.jam.user.User.Preferences.Converter</converter>
                    <includeExpression>.*\.users\.preferences</includeExpression>
                    <includeTypes>TEXT</includeTypes>
                </forcedType>
                <forcedType>
                    <userType>com.ucla.jam.chat.Chatroom.Info</userType>
                    <converter>com.ucla.jam.chat.Chatroom.Info.Converter</converter>
                    <includeExpression>.*\.chatrooms\.info</includeExpression>
                    <includeTypes>TEXT</includeTypes>
                </forcedType>
                <forcedType>
                    <userType>com.ucla.jam.notifications.Notification.Kind</userType>
                    <enumConverter>true</enumConverter>
                    <includeExpression>.*\.notifications\.kind</includeExpression>
                    <includeTypes>.*</includeTypes>
                </forcedType>
                <forcedType>
                    <name>BOOLEAN</name>
                    <includeTypes>(?i:TINYINT\(1\))</includeTypes>
                </forcedType>
            </forcedTypes>
        </database>

        <target>
            <packageName>generated.jooq</packageName>
            <directory>./src/main/java</directory>
        </target>
    </generator>
</configuration>